<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="4dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/view_holder_main_recycle_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/view_holder_main_recycle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_black_1000"
            android:text="Title"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@id/view_holder_main_recycle_img"
            app:layout_constraintTop_toTopOf="@id/view_holder_main_recycle_img"
            app:layout_constraintBottom_toTopOf="@id/view_holder_main_recycle_type"/>

        <TextView
            android:id="@+id/view_holder_main_recycle_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dessert"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/view_holder_main_recycle_title"
            app:layout_constraintLeft_toLeftOf="@id/view_holder_main_recycle_title"
            app:layout_constraintBottom_toBottomOf="@id/view_holder_main_recycle_img"/>

        <View
            android:id="@+id/view_holder_main_recycle_line_1"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/md_black_1000"
            android:layout_marginStart="15dp"
            app:layout_constraintLeft_toRightOf="@id/view_holder_main_recycle_type"
            app:layout_constraintTop_toTopOf="@id/view_holder_main_recycle_type"
            app:layout_constraintBottom_toBottomOf="@id/view_holder_main_recycle_type"/>

        <TextView
            android:id="@+id/view_holder_main_recycle_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15sp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="@id/view_holder_main_recycle_line_1"
            app:layout_constraintLeft_toRightOf="@id/view_holder_main_recycle_line_1"
            app:layout_constraintBottom_toBottomOf="@id/view_holder_main_recycle_line_1"/>

        <TextView
            android:id="@+id/view_holder_main_recycle_time_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="minute"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/view_holder_main_recycle_line_1"
            app:layout_constraintLeft_toRightOf="@id/view_holder_main_recycle_time"
            app:layout_constraintBottom_toBottomOf="@id/view_holder_main_recycle_line_1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>